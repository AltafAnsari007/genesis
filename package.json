{
  "name": "atomos-genesis-component-library",
  "description": "list of components for your project",
  "version": "0.0.12",
  "private": false,
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "type": "module",
  "repository": {
    "url": "https://github.com/atomostechhq/atomos-genesis-component-library"
  },
  "keywords": [
    "component",
    "library",
    "nextjs",
    "typescript"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    },
    "./style": {
      "import": "./dist/style.css",
      "require": "./dist/style.css"
    }
  },
  "scripts": {
    "dev": "next dev",
    "build:css": "postcss ./app/globals.css -o dist/styles.css",
    "build": "tsup && npm run build:css",
    "prepare": "npm run build",
    "start": "next start",
    "lint": "next lint"
  },
  "license": "MIT",
  "dependencies": {
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "next": "^14.2.3",
    "react": "^18",
    "react-beautiful-dnd": "^13.1.1",
    "react-dom": "^18",
    "remixicon-react": "^1.0.0",
    "tailwind-merge": "^2.2.2",
    "tsup": "^8.0.2"
  },
  "devDependencies": {
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-beautiful-dnd": "^13.1.8",
    "@types/react-dom": "^18",
    "autoprefixer": "^10.4.19",
    "eslint": "^8",
    "eslint-config-next": "14.2.1",
    "postcss": "^8.4.38",
    "postcss-cli": "^11.0.0",
    "tailwindcss": "^3.4.3",
    "typescript": "^5"
  }
}
